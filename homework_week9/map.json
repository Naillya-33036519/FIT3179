{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "State Wise Tourism Rates in Malaysia",
    "projection": {"type": "equalEarth"},
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/Naillya-33036519/FIT3179/main/homework_week9/output.topojson",
          "format": {"type": "topojson", "feature": "Malaysia Map"}
        },
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/Naillya-33036519/FIT3179/main/homework_week9/Total_Visitors_Millions.csv"
        },
        "mark": {"type": "circle", "tooltip": {"content": "data"}},
        "encoding": {
          "longitude": {"field": "Longitude", "type": "quantitative"},
          "latitude": {"field": "Latitude", "type": "quantitative"},
          "size": {
            "field": "Visitors",
            "type": "quantitative",
            "title": "Visitors in Millions"
          },
          "color": {
            "field": "State",
            "type": "nominal",
            "title": "States in Malaysia",
            "scale": {"scheme": "reds"}
          },
          "tooltip": [
            {"field": "State", "type": "nominal", "title": "State"},
            {"field": "Visitors", "type": "quantitative", "title": "Visitors (Millions)"}
          ]
        }
      }
    ]
  }
  
